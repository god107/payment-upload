@page "/uploads/{UploadIdParam}/{TokenParam}"
@using Microsoft.AspNetCore.SignalR.Client
@using UploadPayments.BlazorUI.Services
@using UploadPayments.Contracts
@inject PaymentUploadsApiClient ApiClient
@inject NavigationManager Navigation
@inject IConfiguration Configuration
@rendermode InteractiveServer
@implements IAsyncDisposable

<PageTitle>Upload Details</PageTitle>

<div class="container mt-4">
    @if (errorMessage is not null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @errorMessage
        </div>
    }

    @if (successMessage is not null)
    {
        <div class="alert alert-success">
            <i class="bi bi-check-circle"></i> @successMessage
        </div>
    }

    @if (errorMessage is not null && uploadStatus is null)
    {
        <a href="/" class="btn btn-primary">Back to Home</a>
    }
    else if (uploadStatus is null)
    {
        <div class="d-flex align-items-center">
            <div class="spinner-border me-3" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <span>Loading upload details...</span>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1>Upload Details</h1>
                <p class="text-muted mb-0">ID: @uploadStatus.UploadId</p>
                <p class="text-muted mb-0">Token: @TokenParam</p>
                <p class="text-muted small">Created: @uploadStatus.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm:ss") UTC</p>
            </div>
            <div>
                <h3><span class="badge bg-@GetStatusBadgeColor(uploadStatus.Status)">@uploadStatus.Status</span></h3>                <button class="btn btn-outline-danger btn-sm mt-2" 
                        @onclick="ConfirmDelete"
                        disabled="@isDeletingUpload"
                        title="Delete Upload">
                    @if (isDeletingUpload)
                    {
                        <span class="spinner-border spinner-border-sm me-1"></span>
                        <span>Deleting...</span>
                    }
                    else
                    {
                        <i class="bi bi-trash"></i>
                        <span>Delete</span>
                    }
                </button>            </div>
        </div>
        
        <div class="row mt-4">
            <div class="col-md-3"><div class="card"><div class="card-body"><h6>Total Rows</h6><h3>@(uploadStatus.TotalRows ?? 0)</h3></div></div></div>
            <div class="col-md-3"><div class="card"><div class="card-body"><h6>Processed</h6><h3>@uploadStatus.ProcessedRows</h3></div></div></div>
            <div class="col-md-3"><div class="card"><div class="card-body"><h6>Succeeded</h6><h3 class="text-success">@uploadStatus.SucceededRows</h3></div></div></div>
            <div class="col-md-3"><div class="card"><div class="card-body"><h6>Failed</h6><h3 class="text-danger">@uploadStatus.FailedRows</h3></div></div></div>
        </div>

        @if (uploadStatus.TotalRows > 0)
        {
            <div class="progress mt-4" style="height: 30px;">
                <div class="progress-bar" role="progressbar" style="width: @GetProgressPercentage()%">@GetProgressPercentage()%</div>
            </div>
        }

        <div class="mt-4">
            <a href="/uploads/@UploadIdParam/errors/@TokenParam" class="btn btn-danger">View Errors (@uploadStatus.FailedRows)</a>
            <a href="/uploads/@UploadIdParam/instructions/@TokenParam" class="btn btn-primary ms-2">View Instructions (@(uploadStatus.TotalRows ?? 0))</a>
            <a href="/" class="btn btn-outline-secondary ms-2">Back to Home</a>
        </div>
    }
</div>

@if (showDeleteConfirmation)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" @onclick="CancelDelete"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this upload?</p>
                    <p class="text-danger mb-0"><i class="bi bi-exclamation-triangle"></i> This will permanently delete all related records including @(uploadStatus?.TotalRows ?? 0) payment rows and validation results.</p>
                    <p class="text-muted mb-0">This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteUpload">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public string UploadIdParam { get; set; } = string.Empty;
    [Parameter] public string TokenParam { get; set; } = string.Empty;
    
    private UploadStatusDto? uploadStatus;
    private HubConnection? hubConnection;
    private string? errorMessage;
    private string? successMessage;
    private bool isDeletingUpload;
    private bool showDeleteConfirmation;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            if (!Guid.TryParse(UploadIdParam, out var uploadId))
            {
                errorMessage = "Invalid upload ID format";
                return;
            }

            if (!Guid.TryParse(TokenParam, out var token))
            {
                errorMessage = "Invalid token format";
                return;
            }

            await LoadStatusAsync(uploadId, token);
            
            if (uploadStatus is null)
            {
                errorMessage = "Upload not found or access denied";
                return;
            }

            await InitializeSignalRAsync(token);
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load upload: {ex.Message}";
        }
    }

    private async Task LoadStatusAsync(Guid uploadId, Guid token)
    {
        try
        {
            uploadStatus = await ApiClient.GetUploadStatusAsync(uploadId, token);
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load upload status: {ex.Message}";
            Console.WriteLine($"Error loading upload status: {ex}");
        }
    }

    private async Task InitializeSignalRAsync(Guid token)
    {
        try
        {
            var apiBaseUrl = Configuration["ApiBaseUrl"] ?? "http://localhost:8080";
            hubConnection = new HubConnectionBuilder()
                .WithUrl($"{apiBaseUrl}/hubs/payment-uploads")
                .WithAutomaticReconnect()
                .Build();

            hubConnection.On<Guid, Guid, string, int?, int?>("UploadStatusChanged", OnStatusChanged);
            hubConnection.On<Guid, Guid, int, int, int, int, int, int>("ChunkCompleted", OnChunkCompleted);
            hubConnection.On<Guid, Guid, int, int, int, int>("UploadCompleted", OnUploadCompleted);
            hubConnection.On<Guid, Guid, string>("UploadFailed", OnUploadFailed);
            hubConnection.On<Guid, Guid, int, int, int>("RowProgressUpdate", OnRowProgressUpdate);
            hubConnection.On<Guid, Guid>("UploadDeleted", OnUploadDeleted);

            await hubConnection.StartAsync();
            await hubConnection.InvokeAsync("SubscribeToUpload", token.ToString());
        }
        catch (Exception ex)
        {
            // SignalR connection failed - continue with polling fallback
            Console.WriteLine($"SignalR connection failed: {ex.Message}");
        }
    }

    private async Task OnStatusChanged(Guid uploadId, Guid token, string status, int? totalRows, int? totalChunks)
    {
        if (uploadStatus is not null)
        {
            uploadStatus = uploadStatus with { Status = status, TotalRows = totalRows ?? uploadStatus.TotalRows };
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task OnChunkCompleted(Guid uploadId, Guid token, int chunkIndex, int processed, int succeeded, int failed, int total, int completed)
    {
        if (uploadStatus is not null)
        {
            // Now receiving cumulative totals from worker
            uploadStatus = uploadStatus with { ProcessedRows = processed, SucceededRows = succeeded, FailedRows = failed };
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task OnRowProgressUpdate(Guid uploadId, Guid token, int chunkIndex, int processedInChunk, int totalInChunk)
    {
        if (uploadStatus is not null)
        {
            // Receive cumulative totals from worker (handles parallel workers correctly)
            // processedInChunk is actually cumulative processed across all chunks
            // totalInChunk is actually cumulative succeeded across all chunks
            uploadStatus = uploadStatus with 
            { 
                ProcessedRows = processedInChunk,
                SucceededRows = totalInChunk
            };
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task OnUploadCompleted(Guid uploadId, Guid token, int totalRows, int processed, int succeeded, int failed)
    {
        if (uploadStatus is not null)
        {
            uploadStatus = uploadStatus with { Status = "Completed", TotalRows = totalRows, ProcessedRows = processed, SucceededRows = succeeded, FailedRows = failed };
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task OnUploadFailed(Guid uploadId, Guid token, string error)
    {
        if (uploadStatus is not null)
        {
            uploadStatus = uploadStatus with { Status = "Failed", LastError = error };
            await InvokeAsync(StateHasChanged);
        }
    }

    private string GetStatusBadgeColor(string status) => status switch
    {
        "Completed" => "success",
        "Failed" => "danger",
        "Validating" or "Parsing" => "warning",
        _ => "secondary"
    };

    private double GetProgressPercentage() => uploadStatus?.TotalRows > 0
        ? Math.Round((double)uploadStatus.ProcessedRows / uploadStatus.TotalRows.Value * 100, 1)
        : 0;

    private void ConfirmDelete()
    {
        showDeleteConfirmation = true;
    }

    private void CancelDelete()
    {
        showDeleteConfirmation = false;
    }

    private async Task DeleteUpload()
    {
        if (!Guid.TryParse(UploadIdParam, out var uploadId) || !Guid.TryParse(TokenParam, out var token))
            return;

        try
        {
            isDeletingUpload = true;
            showDeleteConfirmation = false;

            await ApiClient.DeleteUploadAsync(uploadId, token);
            
            successMessage = "Upload deleted successfully. Redirecting...";
            await InvokeAsync(StateHasChanged);

            // Disconnect SignalR before navigation
            if (hubConnection is not null)
                await hubConnection.DisposeAsync();

            // Redirect to uploads list
            await Task.Delay(1000);
            Navigation.NavigateTo("/uploads");
        }
        catch (HttpRequestException ex) when (ex.Message.Contains("400"))
        {
            errorMessage = "Cannot delete upload while it is being processed.";
            isDeletingUpload = false;
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to delete upload: {ex.Message}";
            isDeletingUpload = false;
        }
    }

    private async Task OnUploadDeleted(Guid uploadId, Guid token)
    {
        // Another client deleted this upload, redirect to uploads list
        successMessage = "This upload was deleted.";
        await InvokeAsync(StateHasChanged);
        
        await Task.Delay(2000);
        Navigation.NavigateTo("/uploads");
    }

    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null)
            await hubConnection.DisposeAsync();
    }
}
