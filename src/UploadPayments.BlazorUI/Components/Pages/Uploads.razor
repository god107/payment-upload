@page "/uploads"
@using UploadPayments.BlazorUI.Services
@using UploadPayments.Contracts
@inject PaymentUploadsApiClient ApiClient
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Payment Uploads</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Payment Uploads</h1>
        <a href="/" class="btn btn-primary">
            <i class="bi bi-upload"></i> New Upload
        </a>
    </div>

    @if (errorMessage is not null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> @errorMessage
        </div>
    }

    @if (successMessage is not null)
    {
        <div class="alert alert-success">
            <i class="bi bi-check-circle"></i> @successMessage
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2 text-muted">Loading uploads...</p>
        </div>
    }
    else if (uploads is null || uploads.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            <strong>No uploads yet.</strong> Click "New Upload" to upload your first payment file.
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Recent Uploads</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>File Name</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th class="text-end">Total Rows</th>
                                <th class="text-end">Processed</th>
                                <th class="text-end">Succeeded</th>
                                <th class="text-end">Failed</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var upload in uploads)
                            {
                                <tr>
                                    <td style="cursor: pointer;" @onclick="() => NavigateToUpload(upload.UploadId, upload.Token)">
                                        <i class="bi bi-file-earmark-spreadsheet text-primary"></i>
                                        <strong>@upload.FileName</strong>
                                    </td>
                                    <td style="cursor: pointer;" @onclick="() => NavigateToUpload(upload.UploadId, upload.Token)">
                                        <span class="badge @GetStatusBadgeClass(upload.Status)">
                                            @upload.Status
                                        </span>
                                    </td>
                                    <td style="cursor: pointer;" @onclick="() => NavigateToUpload(upload.UploadId, upload.Token)">
                                        <small class="text-muted">
                                            @upload.CreatedAtUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")
                                        </small>
                                    </td>
                                    <td class="text-end" style="cursor: pointer;" @onclick="() => NavigateToUpload(upload.UploadId, upload.Token)">@(upload.TotalRows?.ToString() ?? "-")</td>
                                    <td class="text-end" style="cursor: pointer;" @onclick="() => NavigateToUpload(upload.UploadId, upload.Token)">@upload.ProcessedRows</td>
                                    <td class="text-end" style="cursor: pointer;" @onclick="() => NavigateToUpload(upload.UploadId, upload.Token)">
                                        <span class="text-success">@upload.SucceededRows</span>
                                    </td>
                                    <td class="text-end" style="cursor: pointer;" @onclick="() => NavigateToUpload(upload.UploadId, upload.Token)">
                                        @if (upload.FailedRows > 0)
                                        {
                                            <span class="text-danger fw-bold">@upload.FailedRows</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">0</span>
                                        }
                                    </td>
                                    <td class="text-center" @onclick:stopPropagation="true">
                                        <div class="btn-group" role="group">
                                            <button class="btn btn-sm btn-outline-primary" 
                                                    @onclick="() => NavigateToUpload(upload.UploadId, upload.Token)"
                                                    title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" 
                                                    @onclick="() => ConfirmDelete(upload)"
                                                    title="Delete"
                                                    disabled="@(deletingUploadId == upload.UploadId)">
                                                @if (deletingUploadId == upload.UploadId)
                                                {
                                                    <span class="spinner-border spinner-border-sm"></span>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-trash"></i>
                                                }
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@if (showDeleteConfirmation)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" @onclick="CancelDelete"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the upload <strong>@uploadToDelete?.FileName</strong>?</p>
                    <p class="text-danger mb-0"><i class="bi bi-exclamation-triangle"></i> This will permanently delete all related records including @(uploadToDelete?.TotalRows ?? 0) payment rows and validation results.</p>
                    <p class="text-muted mb-0">This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteUpload">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<UploadListItemDto>? uploads;
    private string? errorMessage;
    private string? successMessage;
    private bool isLoading = true;
    private Guid? deletingUploadId;
    private bool showDeleteConfirmation;
    private UploadListItemDto? uploadToDelete;

    protected override async Task OnInitializedAsync()
    {
        await LoadUploads();
    }

    private async Task LoadUploads()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            uploads = await ApiClient.GetUploadsAsync(limit: 100);
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load uploads: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private static string GetStatusBadgeClass(string status) => status switch
    {
        "Completed" => "bg-success",
        "Failed" => "bg-danger",
        "Parsing" => "bg-info",
        "Validating" => "bg-primary",
        "Queued" => "bg-secondary",
        _ => "bg-secondary"
    };

    private void NavigateToUpload(Guid uploadId, Guid token)
    {
        Navigation.NavigateTo($"/uploads/{uploadId}/{token}");
    }

    private void ConfirmDelete(UploadListItemDto upload)
    {
        uploadToDelete = upload;
        showDeleteConfirmation = true;
    }

    private void CancelDelete()
    {
        uploadToDelete = null;
        showDeleteConfirmation = false;
    }

    private async Task DeleteUpload()
    {
        if (uploadToDelete == null)
            return;

        try
        {
            deletingUploadId = uploadToDelete.UploadId;
            showDeleteConfirmation = false;

            await ApiClient.DeleteUploadAsync(uploadToDelete.UploadId, uploadToDelete.Token);
            
            successMessage = $"Upload '{uploadToDelete.FileName}' deleted successfully.";
            uploadToDelete = null;

            // Reload uploads list
            await LoadUploads();
        }
        catch (HttpRequestException ex) when (ex.Message.Contains("400"))
        {
            errorMessage = "Cannot delete upload while it is being processed.";
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to delete upload: {ex.Message}";
        }
        finally
        {
            deletingUploadId = null;
        }
    }
}
