@page "/validation-rules"
@using UploadPayments.BlazorUI.Services
@using UploadPayments.Contracts
@inject ValidationRulesApiClient ApiClient
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Validation Rules</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Validation Rules</h1>
        <a href="/validation-rules/add" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Rule
        </a>
    </div>

    @if (errorMessage is not null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }

    @if (successMessage is not null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2 text-muted">Loading validation rules...</p>
        </div>
    }
    else if (rules is null || rules.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            <strong>No validation rules yet.</strong> Click "Add New Rule" to create your first validation rule.
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Current Validation Rules</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Error Code</th>
                                <th>Scope</th>
                                <th>Field</th>
                                <th>Rule Type</th>
                                <th>Severity</th>
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rule in rules)
                            {
                                <tr>
                                    <td>
                                        <strong>@rule.ErrorCode</strong>
                                        @if (!string.IsNullOrWhiteSpace(rule.ErrorMessageTemplate))
                                        {
                                            <br />
                                            <small class="text-muted">@rule.ErrorMessageTemplate</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@rule.Scope</span>
                                    </td>
                                    <td>
                                        @(rule.FieldName ?? "-")
                                    </td>
                                    <td>
                                        <span class="badge @GetRuleTypeBadgeClass(rule.RuleType)">
                                            @rule.RuleType
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @GetSeverityBadgeClass(rule.Severity)">
                                            @rule.Severity
                                        </span>
                                    </td>
                                    <td>
                                        @if (rule.Enabled)
                                        {
                                            <span class="badge bg-success">Enabled</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Disabled</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <button class="btn btn-sm btn-outline-primary" 
                                                    @onclick="() => NavigateToEdit(rule.Id)"
                                                    title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" 
                                                    @onclick="() => ConfirmDelete(rule)"
                                                    title="Delete"
                                                    disabled="@(deletingRuleId == rule.Id)">
                                                @if (deletingRuleId == rule.Id)
                                                {
                                                    <span class="spinner-border spinner-border-sm"></span>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-trash"></i>
                                                }
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            @if (totalPages > 1)
            {
                <div class="card-footer">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center mb-0">
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <button class="page-link" @onclick="() => LoadPage(currentPage - 1)" disabled="@(currentPage == 1)">
                                    Previous
                                </button>
                            </li>
                            @for (int i = 1; i <= totalPages; i++)
                            {
                                var pageNum = i;
                                <li class="page-item @(currentPage == pageNum ? "active" : "")">
                                    <button class="page-link" @onclick="() => LoadPage(pageNum)">
                                        @pageNum
                                    </button>
                                </li>
                            }
                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <button class="page-link" @onclick="() => LoadPage(currentPage + 1)" disabled="@(currentPage == totalPages)">
                                    Next
                                </button>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        </div>
    }
</div>

@if (showDeleteConfirmation)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" @onclick="CancelDelete"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the validation rule <strong>@ruleToDelete?.ErrorCode</strong>?</p>
                    <p class="text-muted mb-0">This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteRule">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<ValidationRuleDto>? rules;
    private bool isLoading = true;
    private string? errorMessage;
    private string? successMessage;
    private int currentPage = 1;
    private int pageSize = 20;
    private int totalPages = 1;
    private Guid? deletingRuleId;
    private bool showDeleteConfirmation;
    private ValidationRuleDto? ruleToDelete;

    protected override async Task OnInitializedAsync()
    {
        await LoadPage(1);
    }

    private async Task LoadPage(int page)
    {
        if (page < 1 || page > totalPages && totalPages > 0)
            return;

        try
        {
            isLoading = true;
            errorMessage = null;

            var offset = (page - 1) * pageSize;
            var response = await ApiClient.GetRulesAsync(offset, pageSize);
            
            if (response != null)
            {
                rules = response.Rules.ToList();
                currentPage = page;
                totalPages = (int)Math.Ceiling((double)response.Total / pageSize);
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load validation rules: {ex.Message}";
            rules = new List<ValidationRuleDto>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToEdit(Guid ruleId)
    {
        Navigation.NavigateTo($"/validation-rules/edit/{ruleId}");
    }

    private void ConfirmDelete(ValidationRuleDto rule)
    {
        ruleToDelete = rule;
        showDeleteConfirmation = true;
    }

    private void CancelDelete()
    {
        ruleToDelete = null;
        showDeleteConfirmation = false;
    }

    private async Task DeleteRule()
    {
        if (ruleToDelete == null)
            return;

        try
        {
            deletingRuleId = ruleToDelete.Id;
            showDeleteConfirmation = false;

            await ApiClient.DeleteRuleAsync(ruleToDelete.Id);
            
            successMessage = $"Validation rule '{ruleToDelete.ErrorCode}' deleted successfully.";
            ruleToDelete = null;

            // Reload current page
            await LoadPage(currentPage);
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to delete validation rule: {ex.Message}";
        }
        finally
        {
            deletingRuleId = null;
        }
    }

    private string GetRuleTypeBadgeClass(string ruleType) => ruleType switch
    {
        "Required" => "bg-danger",
        "Regex" => "bg-primary",
        "AllowedValues" => "bg-info",
        "DecimalRange" => "bg-warning text-dark",
        "DateFormat" => "bg-secondary",
        _ => "bg-secondary"
    };

    private string GetSeverityBadgeClass(string severity) => severity switch
    {
        "Error" => "bg-danger",
        "Warning" => "bg-warning text-dark",
        _ => "bg-secondary"
    };
}
