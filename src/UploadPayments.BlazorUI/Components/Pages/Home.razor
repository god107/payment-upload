@page "/"
@using Microsoft.AspNetCore.Components.Forms
@using UploadPayments.BlazorUI.Services
@inject PaymentUploadsApiClient ApiClient
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Upload Payment Files</PageTitle>

<div class="container mt-4">
    <h1>Payment File Upload</h1>
    <p class="text-muted">Upload CSV payment files for validation and processing</p>

    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Upload CSV File</h5>
            
            <EditForm Model="@uploadModel" OnValidSubmit="@HandleUpload">
                <div class="mb-3">
                    <label class="form-label">Select CSV File</label>
                    <InputFile OnChange="@HandleFileSelected" class="form-control" accept=".csv" />
                </div>
                
                @if (uploading)
                {
                    <div class="spinner-border spinner-border-sm me-2" role="status">
                        <span class="visually-hidden">Uploading...</span>
                    </div>
                    <span>Uploading...</span>
                }
                else
                {
                    <button type="submit" class="btn btn-primary" disabled="@(selectedFile is null)">
                        <i class="bi bi-upload"></i> Upload
                    </button>
                }
            </EditForm>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger mt-3">@errorMessage</div>
            }
        </div>
    </div>

    <div class="mt-4">
        <a href="/uploads" class="btn btn-outline-primary">
            <i class="bi bi-list"></i> View All Uploads
        </a>
        <a href="/validation-rules" class="btn btn-outline-secondary ms-2">
            <i class="bi bi-gear"></i> Manage Validation Rules
        </a>
    </div>
</div>

@code {
    private object uploadModel = new();
    private IBrowserFile? selectedFile;
    private bool uploading;
    private string? errorMessage;

    private void HandleFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        errorMessage = null;
    }

    private async Task HandleUpload()
    {
        if (selectedFile is null) return;

        uploading = true;
        errorMessage = null;

        try
        {
            // Convert IBrowserFile to IFormFile wrapper
            var formFile = new BrowserFileFormFile(selectedFile);
            var result = await ApiClient.UploadFileAsync(formFile);
            
            if (result is not null)
            {
                Navigation.NavigateTo($"/uploads/{result.UploadId}/{result.Token}");
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Upload failed: {ex.Message}";
        }
        finally
        {
            uploading = false;
        }
    }

    // Wrapper to adapt IBrowserFile to IFormFile
    private class BrowserFileFormFile(IBrowserFile file) : IFormFile
    {
        public string ContentType => file.ContentType;
        public string ContentDisposition => $"form-data; name=File; filename={file.Name}";
        public IHeaderDictionary Headers => new HeaderDictionary();
        public long Length => file.Size;
        public string Name => "File";
        public string FileName => file.Name;
        public Stream OpenReadStream() => file.OpenReadStream(maxAllowedSize: 1024 * 1024 * 100); // 100MB max
        public void CopyTo(Stream target) => file.OpenReadStream(maxAllowedSize: 1024 * 1024 * 100).CopyTo(target);
        public async Task CopyToAsync(Stream target, CancellationToken cancellationToken = default)
        {
            using var stream = file.OpenReadStream(maxAllowedSize: 1024 * 1024 * 100);
            await stream.CopyToAsync(target, cancellationToken);
        }
    }
}

